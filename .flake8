# Flake8 configuration for code quality checks
[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    mlruns,
    .pytest_cache,
    .mypy_cache,
    tests
# Ignored error codes:
# E203: whitespace before ':'
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator
# F401: imported but unused (handled by other tools)
# F403: star imports (sometimes needed)
ignore =
    E203,
    E501,
    W503,
    F401,
    F403
per-file-ignores =
    __init__.py:F401,F403
max-complexity = 10
