# Flake8 configuration for code quality checks
[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    mlruns,
    .pytest_cache,
    .mypy_cache,
    tests
ignore =
    E203,
    E501,
    W503,
    F401,
    F403
per-file-ignores =
    __init__.py:F401,F403
max-complexity = 10
